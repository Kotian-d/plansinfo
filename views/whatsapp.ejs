<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WhatsApp Sessions</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>
  </head>
  <body>
    <div class="container py-5">
      <h2 class="mb-4">WhatsApp Session Management</h2>

      <!-- QR DISPLAY BOX -->
      <div class="card mb-4">
        <div class="card-header">Scan WhatsApp QR Code</div>
        <div class="card-body text-center">
          <div id="qrContainer" class="mb-3" style="display: none">
            <canvas id="qrCanvas"></canvas>
          </div>
          <div id="generateContainer">
            <button id="generateBtn" class="btn btn-primary">
              Generate New QR
            </button>
          </div>
        </div>
      </div>

      <!-- ACTIVE SESSIONS TABLE -->
      <div class="card">
        <div class="card-header">Active Sessions</div>
        <div class="card-body">
          <table class="table table-bordered text-center align-middle">
            <thead class="table-light">
              <tr>
                <th>#</th>
                <th>Session ID</th>
                <th>Status</th>
                <th>Last Updated</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="sessionTableBody">
              <!-- Rows will be populated dynamically -->
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <script src="/js/socks.js"></script>
  </body>
</html>
